{
  "realm": "auth-demo-realm",
  "enabled": true,
  "displayName": "Auth Demo Realm",
  "accessTokenLifespan": 300,
  "accessTokenLifespanForImplicitFlow": 900,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "roles": {
    "realm": [
      {
        "name": "ADMIN",
        "description": "Administrator role"
      },
      {
        "name": "MANAGER", 
        "description": "Manager role"
      },
      {
        "name": "USER",
        "description": "Regular user role"
      },
      {
        "name": "GUEST",
        "description": "Guest user role"
      }
    ]
  },
  "clients": [
    {
      "clientId": "auth-demo-client",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "bearerOnly": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "authorizationServicesEnabled": true,
      "redirectUris": [
        "http://localhost:8081/*",
        "http://localhost:3000/*"
      ],
      "webOrigins": [
        "http://localhost:8081",
        "http://localhost:3000"
      ],
      "defaultClientScopes": [
        "web-origins",
        "profile",
        "roles",
        "email"
      ],
      "protocolMappers": [
        {
          "name": "realm-roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "config": {
            "user.attribute": "realm_roles",
            "access.token.claim": "true",
            "claim.name": "realm_access.roles",
            "jsonType.label": "String",
            "multivalued": "true"
          }
        }
      ]
    }
  ],
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "email": "admin@example.com",
      "firstName": "System",
      "lastName": "Administrator",
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": false
        }
      ],
      "realmRoles": ["ADMIN"]
    },
    {
      "username": "manager",
      "enabled": true,
      "email": "manager@example.com", 
      "firstName": "John",
      "lastName": "Manager",
      "credentials": [
        {
          "type": "password",
          "value": "manager123",
          "temporary": false
        }
      ],
      "realmRoles": ["MANAGER"]
    },
    {
      "username": "user",
      "enabled": true,
      "email": "user@example.com",
      "firstName": "Jane",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "user123",
          "temporary": false
        }
      ],
      "realmRoles": ["USER"]
    },
    {
      "username": "guest",
      "enabled": true,
      "email": "guest@example.com",
      "firstName": "Guest",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "guest123",
          "temporary": false
        }
      ],
      "realmRoles": ["GUEST"]
    }
  ]
}
